generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Combined wallet pair table (replaces Wallet, EthAddress, WalletEthMapping)
model WalletPair {
  id           Int                  @id @default(autoincrement())
  solAddress   String               @db.VarChar(44)
  ethAddress   String               @db.VarChar(42)
  createdAt    DateTime             @default(now())
  transactions AirdropTransaction[]

  @@unique([solAddress, ethAddress])
  @@index([solAddress])
  @@index([ethAddress])
  @@map("wallet_pair")
}

// AirdropRun is stored on-chain. This table stores the on-chain run ID
// for transaction logging purposes only.
model AirdropRun {
  id           BigInt                 @id // On-chain run ID (not auto-increment)
  createdAt    DateTime               @default(now())
  transactions AirdropTransaction[]

  @@map("airdrop_run")
}

model AirdropTransaction {
  id           Int        @id @default(autoincrement())
  runId        BigInt
  walletPairId Int
  amount       BigInt
  txSignature  String?    @db.VarChar(88)
  status       String     @db.VarChar(10)
  errorMessage String?
  createdAt    DateTime   @default(now())
  run          AirdropRun @relation(fields: [runId], references: [id])
  walletPair   WalletPair @relation(fields: [walletPairId], references: [id])

  @@index([walletPairId])
  @@index([runId])
  @@map("airdrop_transaction")
}
