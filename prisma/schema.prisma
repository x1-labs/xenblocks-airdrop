generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  id           Int                  @id @default(autoincrement())
  address      String               @unique @db.VarChar(44)
  createdAt    DateTime             @default(now())
  ethMappings  WalletEthMapping[]
  transactions AirdropTransaction[]

  @@index([address])
}

model EthAddress {
  id             Int                @id @default(autoincrement())
  address        String             @unique @db.VarChar(42)
  createdAt      DateTime           @default(now())
  walletMappings WalletEthMapping[]

  @@index([address])
}

model WalletEthMapping {
  id           Int        @id @default(autoincrement())
  walletId     Int
  ethAddressId Int
  createdAt    DateTime   @default(now())
  wallet       Wallet     @relation(fields: [walletId], references: [id])
  ethAddress   EthAddress @relation(fields: [ethAddressId], references: [id])

  @@unique([walletId, ethAddressId])
}

// AirdropRun is now primarily stored on-chain.
// This table stores the on-chain run ID for transaction logging purposes.
model AirdropRun {
  id           BigInt                 @id // On-chain run ID (not auto-increment)
  createdAt    DateTime               @default(now())
  transactions AirdropTransaction[]
}

model AirdropTransaction {
  id           Int        @id @default(autoincrement())
  runId        BigInt
  walletId     Int
  amount       BigInt
  txSignature  String?    @db.VarChar(88)
  status       String     @db.VarChar(10)
  errorMessage String?
  createdAt    DateTime   @default(now())
  run          AirdropRun @relation(fields: [runId], references: [id])
  wallet       Wallet     @relation(fields: [walletId], references: [id])

  @@index([walletId])
  @@index([runId])
}
