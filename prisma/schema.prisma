generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  id           Int                  @id @default(autoincrement())
  address      String               @unique @db.VarChar(44)
  createdAt    DateTime             @default(now())
  ethMappings  WalletEthMapping[]
  snapshots    AirdropSnapshot[]
  transactions AirdropTransaction[]

  @@index([address])
}

model EthAddress {
  id             Int                @id @default(autoincrement())
  address        String             @unique @db.VarChar(42)
  createdAt      DateTime           @default(now())
  walletMappings WalletEthMapping[]

  @@index([address])
}

model WalletEthMapping {
  id           Int        @id @default(autoincrement())
  walletId     Int
  ethAddressId Int
  createdAt    DateTime   @default(now())
  wallet       Wallet     @relation(fields: [walletId], references: [id])
  ethAddress   EthAddress @relation(fields: [ethAddressId], references: [id])

  @@unique([walletId, ethAddressId])
}

model AirdropRun {
  id              Int                  @id @default(autoincrement())
  runDate         DateTime             @default(now())
  runType         String               @db.VarChar(10)
  totalRecipients Int                  @default(0)
  totalAmount     BigInt               @default(0)
  dryRun          Boolean              @default(false)
  snapshots       AirdropSnapshot[]
  transactions    AirdropTransaction[]
}

model AirdropSnapshot {
  id          Int        @id @default(autoincrement())
  runId       Int
  walletId    Int
  apiAmount   String
  tokenAmount BigInt
  createdAt   DateTime   @default(now())
  run         AirdropRun @relation(fields: [runId], references: [id])
  wallet      Wallet     @relation(fields: [walletId], references: [id])

  @@index([walletId, createdAt(sort: Desc)])
}

model AirdropTransaction {
  id           Int        @id @default(autoincrement())
  runId        Int
  walletId     Int
  amount       BigInt
  txSignature  String?    @db.VarChar(88)
  status       String     @db.VarChar(10)
  errorMessage String?
  createdAt    DateTime   @default(now())
  run          AirdropRun @relation(fields: [runId], references: [id])
  wallet       Wallet     @relation(fields: [walletId], references: [id])

  @@index([walletId])
  @@index([runId])
}
